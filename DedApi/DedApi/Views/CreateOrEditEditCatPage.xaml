<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DedApi.Views.CreateOrEditEditCatPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Имя котэ" />
            <Entry Placeholder="Имя" Text="{Binding Name}"/>
            <Label Text="Цвет котэ" />
            <Entry Placeholder="Цвет" Text="{Binding Color}"/>
            <Switch IsToggled="{Binding Gender}" />
            <Button Clicked="SaveButton_Clicked" Text="Сохранить" />
            <Button Clicked="DeleteButton_Clicked" Text="Удалить" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>